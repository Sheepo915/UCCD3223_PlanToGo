<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_attraction_list_img"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/rounded_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="43dp"
        android:layout_height="32dp"
        android:src="@android:drawable/btn_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_attraction_list_name"
        android:layout_width="180dp"
        android:layout_height="19dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="13dp"
        android:text="Title"
        app:layout_constraintStart_toEndOf="@+id/iv_attraction_list_img"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tv_attraction_location"
        android:layout_width="179dp"
        android:layout_height="19dp"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="Country Name"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_attraction_list_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_attraction_list_name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="Notes"
        app:layout_constraintStart_toEndOf="@+id/iv_attraction_list_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_attraction_location" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="18dp"
        android:layout_weight="1"
        android:text="Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>